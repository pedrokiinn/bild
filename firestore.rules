rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getRole() == 'admin';
    }

    // Coleção de Usuários
    match /users/{userId} {
      // PERMITIR que qualquer pessoa crie uma conta (cadastro) e leia a lista para verificar credenciais (login).
      allow list, create: if true;

      // PERMITIR que um usuário leia seus próprios dados ou que um admin leia qualquer dado.
      allow get: if isOwner(userId) || isAdmin();
      
      // PERMITIR que um admin atualize qualquer usuário.
      allow update: if isAdmin();

      // PERMITIR que um admin exclua qualquer usuário, exceto a si mesmo se for o último admin.
      allow delete: if isAdmin();
    }

    // Coleção de Veículos
    match /vehicles/{vehicleId} {
      // Qualquer usuário logado pode ver os veículos.
      allow read: if isSignedIn();
      // Apenas admins podem criar, editar ou apagar veículos.
      allow write: if isAdmin();
    }

    // Coleção de Checklists
    match /checklists/{checklistId} {
      // Qualquer usuário logado pode ler checklists.
      allow read: if isSignedIn();
      // Qualquer usuário logado pode criar um checklist.
      allow create: if isSignedIn();
      // Apenas admins podem apagar checklists.
      allow delete: if isAdmin();
      // O dono do checklist (motorista) ou um admin podem atualizar (ex: registrar chegada).
      allow update: if isAdmin() || (isSignedIn() && resource.data.driverName == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.name);
    }
    
    // Coleção de Relatórios de Exclusão
    match /deletionReports/{reportId} {
        // Apenas admins podem ler ou escrever relatórios.
        allow read, write: if isAdmin();
    }
  }
}
